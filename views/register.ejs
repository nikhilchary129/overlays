                <span hidden="">
                    <div>
                        <svg focusable="false" width="24" height="24" viewBox="25 25 50 50">
                            <circle cx="50" cy="50" r="20" fill="none" stroke="currentColor" stroke-width="5"></circle>
                        </svg>
                    </div>
                </span>
            </button>
            <br>
            <!-- Updated text -->
            <span>Already have an account? <a href="/account/login">Log In</a></span>
        </form>
    </div>
